<%- include("./partials/header.ejs") %>


<div class="question">
  <form id="quizForm" action="/submit-answers" method= "POST">
  <% content.forEach((item, index) => { %>
    <div class="question_block">
      <h4 class="question_head">Q<%= index+1 %>: <%- item.question %></h4>
      <ul class="question_options">
        <% item.options.forEach((option, optIndex) => { %>
          <li>
            <input 
              id="q<%= index %>_opt<%= optIndex %>"
              type="radio" 
              name="q<%= index %>" 
              value="<%- option %>" 
              required
            >
            <label for="q<%= index %>_opt<%= optIndex %>" class="radio-label">
              <%- option %>
            </label>
          </li>
        <% }) %>
      </ul>
    </div>
  <% }) %>

  <button type="submit" class="btn">Submit</button>
</form>
</div>

<%- include("./partials/footer.ejs") %>
